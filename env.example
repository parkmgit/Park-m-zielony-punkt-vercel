# PostgreSQL Database Configuration
# Skopiuj ten plik do .env.local i uzupełnij danymi

# OPCJA 1: Connection String (preferowana)
# DATABASE_URL=postgresql://user:password@localhost:5432/park_m_trees

# OPCJA 2: Osobne parametry
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=park_m_trees

# SSL (dla produkcji, np. Windows Server z SSL)
DB_SSL=false

# Wymuszenie użycia standardowego PostgreSQL (pg) zamiast Neon
USE_STANDARD_PG=true

# Node Environment
NODE_ENV=production

# Cloudinary (do przechowywania zdjęć)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
